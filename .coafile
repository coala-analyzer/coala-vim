[vim]
files = **/*.vim
bears = SpaceConsistencyBear
use_spaces = True
default_actions = SpaceConsistencyBear: ApplyPatchAction

[python]
files = **/*.py
bears = SpaceConsistencyBear
use_spaces = True
default_actions = SpaceConsistencyBear: ApplyPatchAction

[markdown]
files = **/*.md
bears = SpaceConsistencyBear
use_spaces = True
default_actions = SpaceConsistencyBear: ApplyPatchAction

[commit]
bears = GitCommitBear
shortlog_trailing_period = False
shortlog_regex = ([^:]*|\S+: [A-Z0-9*].*)

[yml]
bears = YAMLLintBear
files = **.yml
